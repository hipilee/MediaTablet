<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jiaying.mediatablet.fragment.AdviceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/btn_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.191" />

        <Button
            android:id="@+id/advice_btn"
            style="@style/btn_style"
            android:layout_width="0dp"
            android:layout_weight="0.618"
            android:text="建议" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.191" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/btn_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.191" />

        <Button
            android:id="@+id/evaluate_btn"
            style="@style/btn_style"
            android:layout_width="0dp"
            android:layout_weight="0.618"
            android:text="评价" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.191" />
    </LinearLayout>
</LinearLayout>
