<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.AuthFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/txt_grey"
        android:layout_margin="@dimen/btn_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btn_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/txt_blue_style"
                        android:layout_marginRight="@dimen/btn_margin"
                        android:text="姓名" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/txt_black_style"
                        android:text="李波" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btn_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/txt_blue_style"
                        android:layout_marginRight="@dimen/btn_margin"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/tv_sex"
                        style="@style/txt_black_style"
                        android:text="男" />

                    <TextView
                        style="@style/txt_blue_style"
                        android:layout_marginRight="@dimen/btn_margin"
                        android:text="     民族" />

                    <TextView
                        android:id="@+id/tv_nation"
                        style="@style/txt_black_style"
                        android:text="汉" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btn_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/txt_blue_style"
                        android:layout_marginRight="@dimen/btn_margin"
                        android:text="出生" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        style="@style/txt_black_style"
                        android:text="1992年10月16号" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btn_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/txt_blue_style"
                        android:layout_marginRight="@dimen/btn_margin"
                        android:text="住址" />

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/txt_black_style"
                        android:layout_width="300dp"
                        android:text="四川成都华阳" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:src="@mipmap/ic_norse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/txt_blue_style"
                android:layout_marginRight="@dimen/btn_margin"
                android:text="号码" />

            <TextView
                android:id="@+id/tv_idcard"
                style="@style/txt_black_style"
                android:text="51100102010010150105" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
