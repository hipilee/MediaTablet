<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/welcome_plams"
    tools:context="com.jiaying.mediatablet.fragment.WelcomePlasmFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/slogan_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="**********"
        android:textColor="@color/main_color"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:gravity="right"
        android:text="**********"
        android:textColor="#FFA726"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_margin="@dimen/btn_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_norse" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/txt_blue_style"
                android:layout_marginRight="@dimen/btn_margin"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/txt_black_style"
                android:text="李波" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/txt_blue_style"
                android:layout_marginRight="@dimen/btn_margin"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_sex"
                style="@style/txt_black_style"
                android:text="男" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/txt_blue_style"
                android:layout_marginRight="@dimen/btn_margin"
                android:text="出生" />

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/txt_black_style"
                android:text="1992年10月16号" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/txt_blue_style"
                android:layout_marginRight="@dimen/btn_margin"
                android:text="住址" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/txt_black_style"
                android:text="四川成都华阳" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/txt_blue_style"
                android:layout_marginRight="@dimen/btn_margin"
                android:text="号码" />

            <TextView
                android:id="@+id/tv_idcard"
                style="@style/txt_black_style"
                android:text="51100102010010150105" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
